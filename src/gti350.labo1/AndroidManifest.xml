<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gti350.labo1"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- <uses-sdk -->
    <!-- android:minSdkVersion="8" -->
    <!-- android:targetSdkVersion="20" /> -->
    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".FighterDefinitionActivity"
            android:label="@string/title_activity_fighter_definition" >
        </activity>
        <activity
            android:name=".JudgeDefinitionActivity"
            android:label="@string/title_activity_judge_definition" >
        </activity>
        <activity
            android:name=".RoundDefinitionActivity"
            android:label="@string/title_activity_round_definition" >
        </activity>
        <activity
            android:name=".PenaltyDefinitionActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_alert_penalty"
            android:theme="@style/Theme.Base.AppCompat.Dialog.FixedSize" >
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="@string/title_activity_results" >
        </activity>
    </application>

</manifest>