<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landscape_activity_fighter_definition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boxing_ring_landscape"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gti350.labo1.FighterDefinitionActivity" >

    <LinearLayout
        android:id="@+id/layout_fighter_definition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_red_fighter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/red_fighter_label"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/red_fighter" />

            <EditText
                android:id="@+id/textbox_red_fighter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/red_fighter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_blue_fighter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/blue_fighter_label"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blue_fighter" />

            <EditText
                android:id="@+id/textbox_blue_fighter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/blue_fighter" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/label_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:background="@color/message_background_white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/label_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_black" />
    </RelativeLayout>

</RelativeLayout>