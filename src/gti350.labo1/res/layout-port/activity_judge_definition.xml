<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landscape_activity_fighter_definition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boxing_ring_portrait"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gti350.labo1.FighterDefinitionActivity" >

    <LinearLayout
        android:id="@+id/layout_fighter_definition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/label_first_judge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/first_judge_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_white" />

        <EditText
            android:id="@+id/textbox_first_judge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/label_second_judge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/second_judge_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_white" />

        <EditText
            android:id="@+id/textbox_second_judge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/text_white" />

        <TextView
            android:id="@+id/label_third_judge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/third_judge_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_white" />

        <EditText
            android:id="@+id/textbox_third_judge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/text_white" />
    </LinearLayout>

</RelativeLayout>