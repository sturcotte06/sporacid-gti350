<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/portrait_activity_round_definition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boxing_ring_portrait"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gti350.labo1.RoundDefinitionActivity" >

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_leave"
        android:contentDescription="Quit" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:text="Disqualification"
            android:textColor="@color/text_black"
            android:textColorLink="@color/text_white" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_weight="27"
            android:background="@drawable/button_score"
            android:contentDescription="Classement" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_weight="1"
            android:text="K.O"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_black"
            android:textColorLink="@color/text_white" />

        <Button
            android:id="@+id/button1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_marginRight="19dp"
            android:layout_toLeftOf="@+id/textView4"
            android:layout_weight="1"
            android:text="K.O.T."
            android:textColor="@color/text_black"
            android:textColorLink="@color/text_white" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1b"
            android:layout_alignBottom="@+id/button1b"
            android:layout_alignRight="@+id/linearLayout1"
            android:layout_weight="1"
            android:text="Penalties"
            android:textColor="@color/text_black"
            android:textColorLink="@color/text_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_marginRight="31dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_weight="1"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_round_definition"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignLeft="@+id/linearLayout3"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:textColor="@color/text_white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_judge_label"
                android:textColor="@color/text_white"
                android:textColorLink="@android:color/white" />

            <EditText
                android:id="@+id/editText1a"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Red"
                android:inputType="number"
                android:textColor="@color/red_fighter"
                android:textColorHint="@color/red_fighter" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editText1b"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Blue"
                android:inputType="number"
                android:textColor="@color/blue_fighter"
                android:textColorHint="@color/blue_fighter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/second_judge_label"
                android:textColor="@color/text_white"
                android:textColorLink="@android:color/white" />

            <EditText
                android:id="@+id/editText2a"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Red"
                android:inputType="number"
                android:textColor="@color/red_fighter"
                android:textColorHint="@color/red_fighter" />

            <EditText
                android:id="@+id/editText2b"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Blue"
                android:inputType="number"
                android:textColor="@color/blue_fighter"
                android:textColorHint="@color/blue_fighter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/third_judge_label"
                android:textColor="@color/text_white"
                android:textColorLink="@android:color/white" />

            <EditText
                android:id="@+id/editText3a"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Red"
                android:inputType="number"
                android:textColor="@color/red_fighter"
                android:textColorHint="@color/red_fighter" />

            <EditText
                android:id="@+id/editText3b"
                android:layout_width="95px"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:ems="10"
                android:hint="Blue"
                android:inputType="number"
                android:textColor="@color/blue_fighter"
                android:textColorHint="@color/blue_fighter" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_weight="1"
        android:text="@string/round_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_white"
        android:textColorHint="@color/text_white" />

</RelativeLayout>